<?xml version="1.0" encoding="utf-8"?>
<!--Starting with RelativeLayout-->
<RelativeLayout 
android:id="@+id/ParentRelativeLayout"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
xmlns:android="http://schemas.android.com/apk/res/android">
	
	<!--Creating a HorizontalScrollView and giving a pair of properties-->
		<HorizontalScrollView android:id="@+id/HorizontalScrollView"
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:scrollbars="none"
			android:scrollX="450px">
				
	<!--Creating a LinearLayout and defining as Horizontal-->
			
			<LinearLayout android:id="@+id/ButtonsLinearLayout"
				android:layout_width="wrap_content"
				android:orientation="horizontal"
				android:layout_height="fill_parent"
				android:fadingEdgeLength="0px"
				>
	
		<!--Lots of buttons for each section of newspaper-->	
				
				<ImageButton 
					android:id="@+id/last_hour"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:src="@drawable/b1_s1"
					style="@style/HomeButton"
					/>
				<ImageButton 
					android:id="@+id/national"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:src="@drawable/b2_s1"
					style="@style/HomeButton"
									
					/>
				<ImageButton 
					android:id="@+id/global"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:src="@drawable/b3_s1"
					style="@style/HomeButton"
					/>
				<ImageButton 
					android:id="@+id/money"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:src="@drawable/b4_s1"
					style="@style/HomeButton"
					/>
				<ImageButton
					android:id="@+id/community"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:src="@drawable/b5_s1"
					style="@style/HomeButton"
					/>
				<ImageButton
					android:id="@+id/adrenaline"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:src="@drawable/b6_s1"
					style="@style/HomeButton"
					/>
				<ImageButton
					android:id="@+id/show"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:src="@drawable/b7_s1"
					style="@style/HomeButton"
					/>
				<ImageButton 
					android:id="@+id/opinion"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content" 
					android:src="@drawable/b8_s1"
					style="@style/HomeButton"
					/>
				
		<!--Finishing buttons-->	
					
			</LinearLayout>
		<!--Finishing Horizontal LinearLayout-->	
			
		</HorizontalScrollView>
		
	<!--Finishing HorizontalScrollView-->	
		
	<!--Starting Ads Space-->	
		<TextView
			android:text="AD Space"
			android:layout_below="@+id/HorizontalScrollView"
			android:gravity="center_horizontal|center_vertical"
			android:id="@+id/multimedia_button"
			android:layout_width="fill_parent"
			android:layout_height="40dip"
			/>
	
	<!--Finishing Ads Space-->	
	
	
		
</RelativeLayout>
	<!--Finishing XML Description-->	
